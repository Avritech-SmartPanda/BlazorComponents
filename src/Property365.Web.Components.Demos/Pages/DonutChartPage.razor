@page "/donut-chart"

<h1>Property365 Blazor Chart donut series</h1>
<Property365ComponentContainer Name="Chart" Source="DonutChart" Heading="false">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-lg-6 offset-lg-3 my-5">
                <Property365Chart>
                    <Property365DonutSeries Data="@revenue" CategoryProperty="Quarter" ValueProperty="Revenue">
                        <TitleTemplate>
                            <div class="rz-donut-content">
                                <div>Revenue</div> 
                                <div>for 2020</div>
                            </div>
                        </TitleTemplate>
                    </Property365DonutSeries>
                </Property365Chart>
            </div>
        </div>
    </div>
</Property365ComponentContainer>

@code {
    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
    new DataItem
    {
    Quarter = "Q1",
    Revenue = 30000
    },
    new DataItem
    {
    Quarter = "Q2",
    Revenue = 40000
    },
    new DataItem
    {
    Quarter = "Q3",
    Revenue = 50000
    },
    new DataItem
    {
    Quarter = "Q4",
    Revenue = 80000
    },
    };
}