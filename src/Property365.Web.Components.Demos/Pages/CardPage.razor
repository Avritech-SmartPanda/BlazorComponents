@page "/card"

@using Property365.Web.Components.Demos.Data
@using Property365.Web.Components.Demos.Models.Northwind
@using Microsoft.EntityFrameworkCore

@inject NorthwindContext dbContext

<Property365ComponentContainer Name="Card">
    <div class="flex flex-row my-5">
        <div class="w-1/2 lg:w1/3 offset-lg-3 offset-xl-4">
            <Property365Card class="m-3">
                <h3 class="h5">Contact</h3>
                <div class="flex flex-row">
                    <Property365Image Path="@order.Employee?.Photo" Class="rounded-full float-left mr-3" Style="width: 100px; height: 100px;" />
                    <div>
                        <div>Employee</div>
                        <b>@(order.Employee?.FirstName + " " + order.Employee?.LastName)</b>
                        <div class="mt-3">Company</div>
                        <b>@order.Customer?.CompanyName</b>
                    </div>
                </div>
            </Property365Card>
            <Property365Card class="m-3">
                <h3 class="h5">Delivery Information</h3>
                <div class="flex flex-row">
                    <div class="w-1/4">
                        <div>Country</div>
                        <b>@(order.ShipCountry)</b>
                        <div class="mt-3">City</div>
                        <b>@(order.ShipCity)</b>
                    </div>
                    <div class="w-3/4">
                        <div>Ship name</div>
                        <b>@(order.ShipName)</b>
                        <div class="mt-3">Freight</div>
                        <b>@String.Format(new System.Globalization.CultureInfo("en-US"), "{0:C}", order.Freight)</b>
                    </div>
                </div>
            </Property365Card>
        </div>
    </div>
</Property365ComponentContainer>

@code {
    Order order;

    protected override async Task OnInitializedAsync()
    {
        var query = await (from order in dbContext.Orders
                            .Include("Customer")
                            .Include("Employee")
                    select order).Take(5).ToListAsync();

        order = query.FirstOrDefault();
    }
}
