@page "/column-chart"
@using System.Globalization

<h1>Property365 Blazor Chart column series</h1>
<Property365ComponentContainer Heading="false" Name="Chart" Source="ColumnChart">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 my-5">
                <Property365Chart>
                    <Property365ColumnSeries Data="@revenue2020" CategoryProperty="Quarter" Title="2020" LineType="LineType.Dashed" ValueProperty="Revenue" />
                    <Property365ColumnSeries Data="@revenue2019" CategoryProperty="Quarter" Title="2019" ValueProperty="Revenue" />
                    <Property365ColumnOptions Radius="5" />
                    <Property365ValueAxis Formatter="@FormatAsUSD">
                        <Property365GridLines Visible="true" />
                        <Property365AxisTitle Text="Revenue in USD" />
                    </Property365ValueAxis>
                </Property365Chart>
            </div>
        </div>
    </div>
</Property365ComponentContainer>
@code {
    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    string FormatAsUSD(object value)
    {
        return ((double)value).ToString("C0", CultureInfo.CreateSpecificCulture("en-US"));
    }

    DataItem[] revenue2019 = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Revenue = 234000
        },
        new DataItem
        {
            Quarter = "Q2",
            Revenue = 284000
        },
        new DataItem
        {
            Quarter = "Q3",
            Revenue = 274000
        },
        new DataItem
        {
            Quarter = "Q4",
            Revenue = 294000
        },
    };

    DataItem[] revenue2020 = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Revenue = 254000
        },
        new DataItem
        {
            Quarter = "Q2",
            Revenue = 324000
        },
        new DataItem
        {
            Quarter = "Q3",
            Revenue = 354000
        },
        new DataItem
        {
            Quarter = "Q4",
            Revenue = 394000
        },

    };
}