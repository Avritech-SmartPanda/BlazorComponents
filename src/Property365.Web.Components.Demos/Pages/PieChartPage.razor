@page "/pie-chart"

<h1>Property365 Blazor Chart pie series</h1>
<Property365ComponentContainer Name="Chart" Source="PieChart" Heading="false">
    <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-6 offset-lg-3 my-5">
                <Property365Chart SeriesClick=@OnSeriesClick>
                    <Property365PieSeries Data="@revenue" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue" />
                </Property365Chart>
            </div>
        </div>
    </div>
</Property365ComponentContainer>

<EventConsole @ref=@console Class="mt-4" />

@code {
    EventConsole console;

    void OnSeriesClick(SeriesClickEventArgs args)
    {
        console.Log(args);
    }

    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Revenue = 30000
        },
        new DataItem
        {
            Quarter = "Q2",
            Revenue = 40000
        },
        new DataItem
        {
            Quarter = "Q3",
            Revenue = 50000
        },
        new DataItem
        {
            Quarter = "Q4",
            Revenue = 80000
        },
    };
}