@page "/numeric"

<Property365ComponentContainer Name="Numeric">
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
      
            <Property365Card>
                <h4 class="mb-4">Default Numeric</h4>
                <Property365Numeric TValue="int" Change=@(args => OnChange(args, "Numeric")) Class="w-full" />
            </Property365Card>
       
            <Property365Card>
                <h4 class="mb-4">Min set to 1 and Max set to 10</h4>
                <Property365Numeric TValue="int" Min="1" Max="10" Change=@(args => OnChange(args, "Numeric with Min set to 1 and Max set to 10")) Class="w-full" />
            </Property365Card>
      
            <Property365Card>
                <h4 class="mb-4">Placeholder and 0.5 step</h4>
                <Property365Numeric TValue="double" Placeholder="0.0" Step="0.5" Change=@(args => OnChange(args, "Numeric with placeholder and 0.5 step")) Class="w-full" />
            </Property365Card>
       
            <Property365Card>
                <h4 class="mb-4">Nullable numeric</h4>
                <Property365Numeric TValue="int?" @bind-Value=@value Placeholder="Enter or clear value" Change=@(args => OnChange(args, "Nullable numeric")) Class="w-full" />
            </Property365Card>
       
            <Property365Card>
                <h4 class="mb-4">Disabled numeric</h4>
                <Property365Numeric Disabled="true" TValue="int?" @bind-Value=@value Placeholder="Enter or clear value" Class="w-full" />
            </Property365Card>
       
            <Property365Card>
                <h4 class="mb-4">Without Up/Down</h4>
                <Property365Numeric ShowUpDown="false" TValue="int?" @bind-Value=@value Placeholder="Enter or clear value" Change="@(args => OnChange(args, "Without Up/Down"))" Class="w-full" />
            </Property365Card>
      
            <Property365Card class="col-span-2 gap-4">
                <h4 class="mb-2">Formatted Value</h4>
                <div  class="grid grid-cols-2 gap-4">
                <Property365Numeric TValue="double" Format="0.0000" @bind-Value=@dblValue Placeholder="Enter or clear value" Change="@(args => OnChange(args, "Formatted numeric"))" Class="focus:outline-info-900 focus:outline-1 border border-gray-300 text-gray-900 text-sm rounded-lg  block w-full p-2.5 mr-1" />
                <Property365Numeric TValue="double" Format="c" @bind-Value=@dblValue Placeholder="Enter or clear value" Change="@(args => OnChange(args, "Formatted numeric"))" />
           </div>
            </Property365Card>
        
    </div>
</Property365ComponentContainer>

<EventConsole @ref=@console Class="mt-4" />

@code {
    int? value;

    double dblValue = 0.0;

    EventConsole console;

    void OnChange(dynamic value, string name)
    {
        console.Log($"{name} value changed to {value}");
    }
}