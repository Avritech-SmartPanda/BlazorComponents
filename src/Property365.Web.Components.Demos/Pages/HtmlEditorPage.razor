

@page "/html-editor"

<Property365ComponentContainer Name="HtmlEditor">
    <div class="row">
        <div class="col-xl-6">
            <h3>Default set of tools</h3>
            <Property365HtmlEditor @bind-Value=@value style="height: 500px; margin-bottom: 1rem;" UploadUrl="upload/image" Change=@OnChange Paste=@OnPaste Execute=@OnExecute />
        </div>
        <div class="col-xl-6">
            <h3>Custom set of tools (text-editing only)</h3>
            <Property365HtmlEditor @bind-Value=@value style="height: 500px; margin-bottom: 1rem;" UploadUrl="upload/image" Change=@OnChange Paste=@OnPaste Execute=@OnExecute>
                <Property365HtmlEditorUndo />
                <Property365HtmlEditorRedo />
                <Property365HtmlEditorSeparator />
                <Property365HtmlEditorBold />
                <Property365HtmlEditorItalic />
                <Property365HtmlEditorUnderline />
                <Property365HtmlEditorStrikeThrough />
                <Property365HtmlEditorSeparator />
                <Property365HtmlEditorColor />
                <Property365HtmlEditorBackground />
                <Property365HtmlEditorRemoveFormat />
            </Property365HtmlEditor>
        </div>
    </div>
</Property365ComponentContainer>

<EventConsole @ref=@console Class="mt-4" />

@code {
    string value = @"
    <h1>Property365.Web.Components Getting Started Instructions</h1>
    <h2>1. Install</h2>
    <p>
        Property365 Web Components are distributed as the <a href=""https://www.nuget.org/packages/Property365.Web.Components/"">Property365.Web.Components</a> nuget package.
    </p>
    <p>
        You can add them to your project in one of the following ways
    </p>
    <ul>
        <li>Install the package from command line by running <code>dotnet add package Property365.Web.Components</code></li>
        <li>Add the project from the Visual Nuget Package Manager.</li>
    </ul>
    <h2>2. Import the namespace</h2>
    <p>
        Open the <code>_Imports.razor</code> file of your Blazor application and add these two lines <code>@using Property365.Web.Components</code> and <code>@using Property365.Web.Components</code>.
    </p>
    <h2>3. Include a theme</h2>
    <p>
        Open <code>Pages\_Layout.cshtml</code> (Blazor Server .NET 6+), <code>Pages\_Host.cshtml</code> (Blazor Server before .NET 6) or <code>wwwroot/index.html</code> (Blazor WebAssembly)
         and include a theme CSS file by adding this snippet 
        <code>&lt;link rel=""stylesheet"" href=""_content/Property365.Web.Components/css/default-base.css""&gt;</code>
        This version requires only the Property365 Blazor CSS. Optionally you can include Bootstrap.
    </p>
    <p>
        Alternatively you can include <code>&lt;link rel=""stylesheet"" href=""_content/Property365.Web.Components/css/default.css""&gt;</code> which embeds Bootstrap.
    </p>
    <h2>4. Include Property365Components.Blazor.js</h2>
    <p>
        Open the <code>_Host.cshtml</code> file (server-side Blazor) or <code>wwwroot/index.html</code> (client-side WebAssembly Blazor) and include this snippet <code>&lt;script src=""_content/Property365.Web.Components/Property365Components.Blazor.js""&gt;&lt;/script&gt;</code>
    </p>
    <h2>5. Use a component</h2>
    <p>
        Use any Property365 Blazor component by typing its tag name in a Blazor page e.g. <code>&lt;Property365Button Text=""Hi""&gt;&lt;/Property365Button&gt;</code>
    </p>
    <h4>Setting a property</h4>
<pre>
<code>
&lt;Property365Button Text=""@text""&gt;&lt;/Property365Button&gt;
@code {
  string text = ""Hi"";
}
</code>
</pre>
    <h4>Handing events</h4>
<pre>
<code>
&lt;Property365Button Click=""@ButtonClicked"" Text=""Hi""&gt;&lt;/Property365Button&gt;
@code {
  void ButtonClicked()
  {
    //
  }
}
</code>
</pre>
    ";

    EventConsole console;

    void OnPaste(HtmlEditorPasteEventArgs args)
    {
        console.Log($"Paste: {args.Html}");
    }

    void OnChange(string html)
    {
        console.Log($"Change: {html}");
    }

    void OnExecute(HtmlEditorExecuteEventArgs args)
    {
        console.Log($"Execute: {args.CommandName}");
    }
}